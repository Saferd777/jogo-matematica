<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>Ranking do Jogo</title>
  <script type="module">
    // Importa as funções do Firebase (coloque o Firebase SDK no seu projeto)
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.4.0/firebase-app.js";
    import { getDatabase, ref, push, onValue, query, orderByChild, limitToFirst } from "https://www.gstatic.com/firebasejs/10.4.0/firebase-database.js";

    const firebaseConfig = {
      apiKey: "AIzaSyBTV97AKCGhGMyOrr-WXVyFu3r3Wzd1aqo",
      authDomain: "ranking-78322.firebaseapp.com",
      databaseURL: "https://ranking-78322-default-rtdb.firebaseio.com",
      projectId: "ranking-78322",
      storageBucket: "ranking-78322.firebasestorage.app",
      messagingSenderId: "908683382095",
      appId: "1:908683382095:web:3284dddf71a954bd77493a",
      measurementId: "G-EYQK732HD8"
    };

    const app = initializeApp(firebaseConfig);
    const db = getDatabase(app);

    // Função para salvar score
    window.salvarScore = function(nome, tempo) {
      const scoresRef = ref(db, 'scores');
      push(scoresRef, {
        nome: nome,
        tempo: tempo
      });
      alert('Score salvo com sucesso!');
    }

    // Função para mostrar ranking
    window.mostrarRanking = function() {
      const scoresRef = ref(db, 'scores');
      const scoresQuery = query(scoresRef, orderByChild('tempo'), limitToFirst(10));

      onValue(scoresQuery, (snapshot) => {
        const rankingDiv = document.getElementById('ranking');
        rankingDiv.innerHTML = '<h2>Ranking dos melhores tempos</h2>';
        const data = snapshot.val();

        if (!data) {
          rankingDiv.innerHTML += '<p>Nenhum score registrado ainda.</p>';
          return;
        }

        const lista = document.createElement('ol');

        for (const key in data) {
          const item = data[key];
          const li = document.createElement('li');
          li.textContent = `${item.nome} - ${item.tempo.toFixed(2)} segundos`;
          lista.appendChild(li);
        }

        rankingDiv.appendChild(lista);
      });
    }
  </script>
</head>
<body>
  <h1>Meu Jogo</h1>

  <!-- Aqui você pode colocar seu iframe do Scratch, ou o seu jogo -->

  <div>
    <label for="nomeInput">Seu nome:</label>
    <input type="text" id="nomeInput" />
  </div>

  <div>
    <label for="tempoInput">Tempo (segundos):</label>
    <input type="number" step="0.01" id="tempoInput" />
  </div>

  <button onclick="salvarScore(
    document.getElementById('nomeInput').value, 
    parseFloat(document.getElementById('tempoInput').value)
  )">Salvar Score</button>

  <button onclick="mostrarRanking()">Mostrar Ranking</button>

  <div id="ranking"></div>
</body>
</html>
